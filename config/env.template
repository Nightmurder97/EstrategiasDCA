# ==============================================
# CONFIGURACIÓN DE ESTRATEGIAS DCA
# ==============================================
# Copia este archivo a .env y completa las variables

# ==============================================
# CONFIGURACIÓN DE APIS
# ==============================================

# Binance API
BINANCE_API_KEY=
BINANCE_API_SECRET=

# CoinMarketCap API
COINMARKETCAP_API_KEY=

# CoinGecko API (opcional, para uso pro)
COINGECKO_API_KEY=

# Etherscan API
ETHERSCAN_API_KEY=

# BscScan API
BSCSCAN_API_KEY=

# Solscan API
SOLSCAN_API_KEY=

# LiveCoinWatch API
LIVECOINWATCH_API_KEY=329ef506-ea19-43bf-8078-0f10c2b9872e

# DeepSeek API (opcional)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=

# ==============================================
# CONFIGURACIÓN DE EMAIL
# ==============================================

# Email para notificaciones
DCA_EMAIL=
DCA_EMAIL_PASSWORD=
DCA_NOTIFICATION_EMAIL=

# ==============================================
# CONFIGURACIÓN DE TRADING
# ==============================================

# Inversión semanal en EUR
WEEKLY_INVESTMENT=100.0

# Período de análisis histórico en días
LOOKBACK_PERIOD=90

# Tamaño máximo de posición (0.0 - 1.0)
MAX_POSITION_SIZE=0.20

# Umbral de rebalanceo (0.0 - 1.0)
REBALANCE_THRESHOLD=0.05

# Hora de ejecución diaria (formato HH:MM)
DAILY_EXECUTION_TIME=16:00

# ==============================================
# CONFIGURACIÓN DE RIESGO
# ==============================================

# Máximo drawdown permitido (0.0 - 0.5)
MAX_DRAWDOWN=0.25

# Volatilidad máxima anualizada (0.0 - 1.0)
VOLATILITY_THRESHOLD=0.50

# Correlación máxima entre activos (0.0 - 1.0)
CORRELATION_THRESHOLD=0.75

# Volumen mínimo diario en USD
MIN_LIQUIDITY=5000000

# ==============================================
# CONFIGURACIÓN DE ANÁLISIS
# ==============================================

# Período para RSI
RSI_PERIOD=14

# Período para media móvil de volumen
VOLUME_MA_PERIOD=20

# Market cap mínimo en USD
MIN_MARKET_CAP=100000000

# Volumen 24h mínimo en USD
MIN_VOLUME_24H=1000000

# Período de análisis de tendencia en días
TREND_ANALYSIS_PERIOD=30

# Umbral de correlación para análisis
ANALYSIS_CORRELATION_THRESHOLD=0.7

# Umbral de ratio de volumen
VOLUME_RATIO_THRESHOLD=2.0

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================

# URL de la base de datos
DATABASE_URL=sqlite:///dca_trading.db

# Mostrar logs de SQL (true/false)
DATABASE_ECHO=false

# ==============================================
# CONFIGURACIÓN DE SISTEMA
# ==============================================

# Ejecutar al iniciar (true/false)
RUN_ON_START=true

# Backup habilitado (true/false)
BACKUP_ENABLED=true 